@* Not using a wrapper for this page *@
@model Wedding

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row pt-3">
        <div class="col-8">
            <h1>Plan Your Wedding</h1>
        </div>
        <div class="col-2 pt-2 text-center">
            <a href="dashboard"><button type="submit" class="btn btn-primary">Dashboard</button></a>
        </div>
        <div class="col-2 pt-2 text-center">
            <a href=""><button type="submit" class="btn btn-primary">Logout</button></a>
        </div>
    </div>
    <div class="row pt-5">
        <form asp-action="CreateWedding" method="POST" asp-controller="Home">
            <div class="form-group row">
                <span asp-validation-for="Wedder_One" style="color: red;"></span>
                    <label asp-for="Wedder_One" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input type="text" asp-for="Wedder_One" class="form-control text-center">
                </div>
            </div>
            <div class="form-group row">
                <span asp-validation-for="Wedder_Two" style="color: red;"></span>
                    <label asp-for="Wedder_Two" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input type="text" asp-for="Wedder_Two" class="form-control text-center">
                </div>
            </div>
            <div class="form-group row">
                <span asp-validation-for="Date" style="color: red;"></span>
                    <label asp-for="Date" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input type="date" asp-for="Date" class="form-control text-center">
                </div>
            </div>
            <div class="form-group row">
                <span asp-validation-for="Wedding_Address" style="color: red;"></span>
                    <label asp-for="Wedding_Address" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input type="text" asp-for="Wedding_Address" class="form-control text-center">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </form>
    </div>
</div>