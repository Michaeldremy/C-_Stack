@model ProdCatWrapper

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row pt-5">
        <div class="col-12 text-center">
            <a href="/"><button type="submit" class="btn btn-primary ml-3">Products</button></a> | <span class="mr-3">Categories</span>
        </div>
    </div>
    <div class="row pt-5">
        <div class="col-6 text-center">
            <h3>New Category</h3>
            <form asp-action="createcategory" method="POST">
                <div class="form-group row text-center pt-5 pl-5">
                    <span asp-validation-for="Category.Name" style="color: red;"></span>
                    <label asp-for="Category.Name" class="col-sm-2 col-form-label"></label>
                    <div class="col-8 pl-3">
                        <input asp-for="Category.Name" class="form-control">
                    </div>
                </div>
                <div class="form-group row text-center">
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-primary">Create!</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-6 text-center">
            <h3>Existing Categories</h3>
            <div class="row">
                <div class="col-12 text-center pt-5">
                    @foreach (var i in @Model.Categories)
                    {
                        <a href="categories/@i.CategoryId"><h4>@i.Name</h4></a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>