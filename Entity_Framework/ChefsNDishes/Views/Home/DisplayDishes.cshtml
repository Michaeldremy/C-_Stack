@model List<Dish>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row pt-5">
        <div class="col-10 text-center">
            <a href="/"><button type="submit" class="btn btn-primary mr-3">Chefs</button></a> | <span class="ml-3">Dishes</span>
        </div>
        <div class="col-2">
            <a href="dishes/new"><button type="submit" class="btn btn-primary">Add a Dish</button></a>
        </div>
    </div>
    <div class="row pt-5">
        <div class="col-12">
            <h3>Yum, take a look at our tasty dishes!</h3>
        </div>
        <div class="col">
            ________________________________________________________________
        </div>
    </div>
    <div class="row pt-5">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Chef</th>
                    <th scope="col">Tastiness</th>
                    <th scope="col">Calories</th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var dish in @Model)
                    {
                <tr>
                    <td>@dish.Name</td>
                    <td>@dish.Creator.ChefFirstName @dish.Creator.ChefLastName</td>
                    <td>@dish.Tastiness</td>
                    <td>@dish.Calories</td>
                </tr>
                    }
            </tbody>
        </table>
    </div>
</div>