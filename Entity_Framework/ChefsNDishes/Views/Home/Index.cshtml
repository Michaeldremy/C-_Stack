@model List<Chef>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row pt-5">
        <div class="col-10 text-center">
            <span class="mr-3">Chefs</span> | <a href="dishes"><button type="submit" class="btn btn-primary ml-3">Dishes</button></a>
        </div>
        <div class="col-2">
            <a href="newchef"><button type="submit" class="btn btn-primary">Add a Chef</button></a>
        </div>
    </div>
    <div class="row pt-5">
        <div class="col-12">
            <h3>Check out our roster of Chefs!</h3>
        </div>
        <div class="col">
            ________________________________________________________________
        </div>
    </div>
    <div class="row pt-5">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Age</th>
                    <th scope="col"># of Dishes</th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var chef in @Model)
                    {
                <tr>
                    <td>@chef.ChefFirstName @chef.ChefLastName</td>
                    <td>@chef.Age</td>
                    <td>@chef.CreatedDishes.Count</td>
                </tr>
                    }
            </tbody>
        </table>
    </div>
</div>
