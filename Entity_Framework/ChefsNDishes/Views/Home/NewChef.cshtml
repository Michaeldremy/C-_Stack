@model Chef

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row pt-5 text-center">
        <div class="col-12">
            <h3>Add a Chef!</h3>
        </div>
    </div>
    <div class="row text-center">
        <div class="col">
            ____________________________________________________
        </div>
    </div>
    <div class="row pt-5">
        <div class="col-12">
            <a href="/"><button type="submit" class="btn btn-primary">Home</button></a>
        </div>
    </div>
    <div class="row pt-5">
        <div class="col-12">
            <form asp-action="createchef" asp-controller="Home">
                <div class="form-group row pt-3 text-center">
                    <div class="col-3">
                        <label asp-for="ChefFirstName"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Birthday"></label>
                    </div>
                </div>
                @* Validations appear right above the input tag when the get triggered! *@
                <div class="row text-center">
                    <div class="col-3">
                        <span style="color:red" asp-validation-for="ChefFirstName"></span>
                    </div>
                    <div class="col-3">
                        <span style="color:red" asp-validation-for="Birthday"></span>
                    </div>
                </div>
                <div class="row text-center">
                    <div class="col-3">
                        <input asp-for="ChefFirstName" class="form-control text-center" placeholder="Enter chef's first name">
                    </div>
                    <div class="col-3">
                        <input type="date" asp-for="Birthday" class="form-control text-center">
                    </div>
                </div>
                <div class="form-group row pt-5 text-center">
                    <div class="col-3">
                        <label asp-for="ChefLastName"></label>
                    </div>
                </div>
                @* Validations appear right above the input tag when the get triggered! *@
                <div class="row text-center">
                    <div class="col-3">
                        <span style="color:red" asp-validation-for="ChefLastName"></span>
                    </div>  
                </div>
                    <div class="row text-center">
                        <div class="col-3">
                            <input asp-for="ChefLastName" class="form-control text-center" placeholder="Enter chef's last name">
                        </div>
                        <div class="col-3">
                            <Button type="submit" class="btn btn-primary">Add Chef</Button>
                        </div>
                    </div>
            </form>
        </div>
    </div>
</div>