@{
    ViewData["Title"] = "Home Page";
}

@model User

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row pt-5">
        <div class="col-8 text-center">
            <h2>Register!</h2>
        </div>
        <div class="col-4 pt-2 text-center">
            <a href="/login"><button type="submit" class="btn btn-primary">Login</button></a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form asp-action="register" method="POST">
                <div class="form-group row pt-5">
                    <span style="color:red" class="col-12" asp-validation-for="FirstName"></span>
                            <label asp-for="FirstName" class="col-sm-3 col-form-label text-center"></label>
                        <div class="col-sm-4">
                            <input type="name" asp-for="FirstName" class="form-control" placeholder="Enter your first name">
                        </div>
                </div>
                <div class="form-group row pt-3">
                    <span style="color:red" class="col-12" asp-validation-for="LastName"></span>
                        <label asp-for="LastName" class="col-sm-3 col-form-label text-center"></label>
                    <div class="col-sm-4">
                        <input type="name" asp-for="LastName" class="form-control" placeholder="Enter your last name">
                    </div>
                </div>
                <div class="form-group row pt-3">
                    <span style="color:red" class="col-12" asp-validation-for="Email"></span>
                        <label asp-for="Email" class="col-sm-3 col-form-label text-center"></label>
                    <div class="col-sm-4">
                        <input type="Email" asp-for="Email" class="form-control" placeholder="Enter your email">
                    </div>
                </div>
                <div class="form-group row pt-3">
                    <span style="color:red" class="col-12" asp-validation-for="Password"></span>
                        <label asp-for="Password" class="col-sm-3 col-form-label text-center"></label>
                    <div class="col-sm-4">
                        <input type="Password" asp-for="Password" class="form-control" placeholder="Enter your password">
                    </div>
                </div>
                <div class="form-group row pt-3">
                    <span style="color:red" class="col-12" asp-validation-for="ConfirmPW"></span>
                        <label asp-for="ConfirmPW" class="col-sm-3 col-form-label text-center"></label>
                    <div class="col-sm-4">
                        <input type="Password" asp-for="ConfirmPW" class="form-control" placeholder="Confirm your password">
                    </div>
                </div>
                <div class="form-group pt-3">
                    <div class="col-8 text-center">
                        <button type="submit" class="btn btn-primary" style="width: 125px;">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
