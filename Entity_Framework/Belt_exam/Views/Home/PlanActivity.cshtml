@model Sport

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row pt-3">
        <div class="col-8">
            <h1>Dojo Activity Center</h1>
        </div>
        <div class="col-2 pt-2">
            <a href="beltdashboard">Home</a>
        </div>
        <div class="col-2 pt-2">
            <a href="logout">Logout</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h4>Create an Activity</h4>
        </div>
        <form asp-action="CreateActivity" method="POST" asp-controller="Home">
            <div class="col-6 pt-3 text-center">
                <span asp-validation-for="Title"></span>
                <label asp-for="Title"></label>
                <input type="text" asp-for="Title">
            </div>
            <div class="col-6 pt-3 text-center">
                <span asp-validation-for="Time"></span>
                <label asp-for="Time"></label>
                <input type="time" asp-for="Time">
            </div>
            <div class="col-6 pt-3 text-center">
                <span asp-validation-for="Date"></span>
                <label asp-for="Date"></label>
                <input type="Date" asp-for="Date">
            </div>
            <div class="col-6 pt-3 text-center">
                <span asp-validation-for="Duration"></span>
                <label asp-for="Duration"></label>
                <input type="number" asp-for="Duration">
                <select asp-for="DurationType">
                    <option value="Hours">Hours</option>
                    <option value="Days">Days</option>
                    <option value="Minutes">Minutes</option>
                </select>
            </div>
            <div class="col-12 pt-3">
                <span asp-validation-for="Description"></span>
                <label asp-for="Description"></label>
                <textarea asp-for="Description" cols="125" rows="5"></textarea>
            </div>
            <div class="col-12 pt-3">
                <button type="submit" class="btn btn-primary">Create Activity</button>
            </div>
        </form>
    </div>
</div>